<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:gravity="center|top"
    android:orientation="vertical"
    tools:context="com.example.nickc.springbreakdestinationpicker.MainActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_margin="8dp"
        android:background="#ff0000"
        android:text="Africa"
        android:textSize="16dp"
        android:id="@+id/AfricaButton"
        android:onClick="continent"
        android:layout_centerHorizontal="true"
        android:focusable="false"
        android:focusableInTouchMode="false" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_margin="8dp"
        android:textSize="16dp"
        android:text="Asia"
        android:id="@+id/AsiaButton"
        android:onClick="continent"
        android:layout_centerHorizontal="true"
        android:background="#2196f3" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_margin="8dp"
        android:textSize="16dp"
        android:text="Oceania"
        android:id="@+id/OceaniaButton"
        android:layout_centerHorizontal="true"
        android:background="#ffeb3b"
        android:onClick="continent" />
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:text="Europe"
            android:textSize="16dp"
            android:id="@+id/EuropeButton"
            android:layout_centerHorizontal="true"
            android:background="#4caf50"
            android:onClick="continent" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:text="North \nAmerica"
            android:textSize="16dp"
            android:id="@+id/NAButton"
            android:layout_centerHorizontal="true"
            android:background="#ff9800"
            android:onClick="continent" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:text="South \nAmerica"
            android:textSize="16dp"
            android:id="@+id/SAButton"
            android:layout_centerHorizontal="true"
            android:background="#3f51b5"
            android:onClick="continent" />
    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/listView"


        android:paddingTop="5dp"
        android:scrollingCache="false" />

</LinearLayout>
